<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:padding="@dimen/spacing_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_tiny"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/black_87"
                android:textSize="@dimen/font_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="ROOM 1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/black_87"
                android:textSize="@dimen/font_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/header"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2 nights" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/relativeLayout4">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="10dp"
                android:src="@color/black_87"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_bed_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                app:layout_constraintLeft_toRightOf="@+id/image_view"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Bed in Dorm" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"
                android:fontFamily="sans-serif"
                android:drawablePadding="@dimen/spacing_tiny"
                app:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                app:drawableStartCompat="@drawable/ic_people_orange_20dp"
                android:drawableLeft="@color/bright_orange"
                app:layout_constraintLeft_toRightOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/text_view_bed_name"
                tools:text="4 Adt 3 Chd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="@color/black"
                android:gravity="center"
                android:drawablePadding="@dimen/spacing_tiny"
                app:drawableLeftCompat="@drawable/ic_tripcoin_color_16dp"
                app:layout_constraintLeft_toRightOf="@+id/text_member"
                app:layout_constraintTop_toBottomOf="@+id/text_view_bed_name"
                tools:text="1234" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginRight="@dimen/spacing_small_tiny"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/font_normal"
                app:layout_constraintLeft_toRightOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/text_view_coin"
                tools:text="BDT 55,916" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:fontFamily="sans-serif-medium"
                android:text="@string/room_details"
                android:textColor="@color/clear_blue"
                android:textSize="@dimen/font_small"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/image_view"
                app:layout_constraintTop_toBottomOf="@+id/text_view_room_price" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/appCompatTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_small_tiny"
                android:layout_marginTop="@dimen/spacing_small"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="#434343"
                android:textSize="@dimen/font_small"
                app:layout_constraintBottom_toBottomOf="@+id/text_view_room_price"
                app:layout_constraintLeft_toRightOf="@+id/text_view_room_price"
                app:layout_constraintTop_toBottomOf="@+id/text_view_coin"
                tools:text="/ 2 nights" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
