<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Original AppCompat attributes. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/indigo</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorError">@color/error_color</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorSurface">@color/surface_color</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorOnError">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>
    </style>

    <style name="CircularWhiteButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/mtrl_circular_white_text_btn_text_color_selector</item>
        <item name="android:textColor">@color/mtrl_circular_white_text_btn_text_color_selector
        </item>
    </style>

    <style name="BlueRoundTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabIndicatorHeight">2dp</item>
    </style>

    <style name="Tbbd.Base.Widget.MaterialComponents.TextInputLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="materialThemeOverlay">
            @style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox
        </item>
        <item name="boxBackgroundMode">none</item>
        <item name="boxBackgroundColor">@color/mtrl_filled_background_color</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox
        </item>
    </style>

    <style name="IndigoButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:background">@drawable/indigo_button_selector</item>
    </style>

    <style name="AppTheme.progressAccent">
        <item name="colorAccent">@color/amberAlpha</item> <!-- Whatever color you want-->
    </style>

    <style name="MyDynamicDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--title and message color-->
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="blueBarEditText">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorPrimaryAlpha</item>
        <item name="colorControlHighlight">@color/colorPrimaryAlpha</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <!--<item name="colorControlNormal">@color/colorPrimary</item>-->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

</resources>