<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_price_range"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Minimum Price"
            android:textColor="@color/black_87"
            android:textSize="12sp"
            tools:text="Minimum Price" />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="Maximum Price"
            android:layout_marginRight="8dp"
            android:textColor="@color/black_87"
            android:textSize="12sp"
            android:layout_below="@+id/title_price_range"
            android:layout_alignParentRight="true"
            tools:text="Maximum Price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_minimum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:textColor="#212121"
            android:textSize="16sp"
            android:layout_below="@+id/appCompatTextView"
            tools:text="10,000" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_view_maximum_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif"
            android:textColor="#212121"
            android:textSize="16sp"
            android:layout_marginRight="8dp"
            android:layout_below="@+id/appCompatTextView"
            android:layout_alignParentRight="true"
            tools:text="10,000" />

        <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
            android:id="@+id/price_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_minimum_price"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            app:bar_color="#c7c7cc"
            app:bar_highlight_color="#007aff"
            app:left_thumb_color="#1882ff"
            app:right_thumb_color="#1882ff" />
    </RelativeLayout>
</layout>
