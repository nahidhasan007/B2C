<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="net.sharetrip.holiday.booking.view.summary.HolidaySummaryViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/holiday_booking_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pale_grey"
        android:clickable="true"
        android:focusable="true"
        tools:context="net.sharetrip.holiday.booking.view.summary.HolidaySummaryFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:fillViewport="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingBottom="72dp"
            android:visibility="@{viewModel.isDataLoading ? View.GONE : View.VISIBLE}">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/begin_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/spacing_small" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/end_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/spacing_small" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/package_summary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/background_white"
                    android:onClick="@{() -> viewModel.onPackageSummaryLayoutClick()}"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="@dimen/spacing_normal"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    app:layout_constraintStart_toStartOf="@id/begin_guideline"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/holiday_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginLeft="@dimen/spacing_medium"
                            android:layout_marginTop="@dimen/spacing_medium"
                            android:tint="@color/blue_blue"
                            app:layout_constraintBottom_toBottomOf="@dimen/spacing_medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_bundle_56dp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/offer_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_medium"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:text="@{viewModel.summary.title}"
                            android:textColor="@color/black"
                            app:layout_constraintEnd_toStartOf="@+id/ivIndicator"
                            app:layout_constraintStart_toEndOf="@id/holiday_icon"
                            app:layout_constraintTop_toTopOf="@id/holiday_icon"
                            tools:text="Offer 1" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvPlaceDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_tiny"
                            android:fontFamily="sans-serif-medium"
                            android:text="@{viewModel.summary.address}"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            app:layout_constraintStart_toStartOf="@id/offer_name"
                            app:layout_constraintTop_toBottomOf="@id/offer_name"
                            tools:text="Bangkok, Thailand" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivIndicator"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="16dp"
                            android:rotation="@{viewModel.isHolidaySummaryExpand ? 270 : 90}"
                            app:layout_constraintBottom_toBottomOf="@id/tvPlaceDetails"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/offer_name"
                            app:srcCompat="@drawable/ic_navigate_next_blue_color_24dp" />

                        <View
                            android:id="@+id/divider_visa_top"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="#efefef"
                            android:visibility="@{viewModel.isHolidaySummaryExpand ? View.VISIBLE : View.GONE}"
                            app:layout_constraintTop_toBottomOf="@id/holiday_icon" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/trip_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.isHolidaySummaryExpand ? View.VISIBLE : View.GONE}"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider_visa_top">

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/vertical_center_guideline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_end="197dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTotalTraveller"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:layout_marginTop="@dimen/spacing_normal"
                                android:drawablePadding="@dimen/spacing_tiny"
                                android:gravity="center"
                                android:text="@{viewModel.summary.adult}"
                                android:textColor="@color/greyish_brown"
                                android:textSize="12sp"
                                app:drawableLeftCompat="@drawable/ic_people_orange_20dp"
                                app:drawableTint="@color/blue_blue"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="12 Adt, 6 Chd" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTravelDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:drawablePadding="@dimen/spacing_tiny"
                                android:gravity="center"
                                android:text="@{viewModel.summary.date}"
                                android:textColor="@color/greyish_brown"
                                android:textSize="12sp"
                                app:drawableLeftCompat="@drawable/ic_calendar_mono_20dp"
                                app:drawableTint="@color/blue_blue"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvTotalTraveller"
                                tools:text="3 Sep 20" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvFreeCancelDateBefore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_small"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:drawablePadding="@dimen/spacing_tiny"
                                android:gravity="center"
                                android:text='@{"Free Cancellation Before: " +viewModel.holidayParamObserver.cancelPolicyDate}'
                                android:textColor="@color/greyish_brown"
                                android:textSize="12sp"
                                app:drawableLeftCompat="@drawable/ic_calendar_mono_20dp"
                                app:drawableTint="@color/blue_blue"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvTravelDate"
                                tools:text="Free Cancellation Before: Thu, 3 Sep 20" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/layout_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="@dimen/spacing_normal"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    app:layout_constraintStart_toStartOf="@id/begin_guideline"
                    app:layout_constraintTop_toBottomOf="@id/package_summary">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/spacing_normal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/discount_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="16dp"
                                android:tint="@color/clear_blue"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_discount_mono" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_discount_option"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="10dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/select_discount_option"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:visibility="@{viewModel.isDiscountOptionExpand() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintEnd_toStartOf="@id/textView_change"
                                app:layout_constraintStart_toEndOf="@id/discount_image"
                                app:layout_constraintTop_toTopOf="@id/discount_image"
                                tools:visibility="gone" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvSelectDiscountOption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="10dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="@string/select_discount_option"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:visibility="@{viewModel.isDiscountOptionExpand() ? View.GONE : View.VISIBLE}"
                                app:layout_constraintBottom_toBottomOf="@id/discount_image"
                                app:layout_constraintStart_toEndOf="@id/discount_image"
                                app:layout_constraintTop_toTopOf="@id/discount_image"
                                tools:text="Select Discount Option"
                                tools:visibility="visible" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvChooseDiscountOption"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/choose_your_discount_option"
                                android:textColor="@color/black"
                                android:textSize="11sp"
                                android:visibility="@{viewModel.isDiscountOptionExpand() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintStart_toEndOf="@id/discount_image"
                                app:layout_constraintTop_toBottomOf="@id/text_discount_option"
                                tools:visibility="gone" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/textView_change"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:gravity="end"
                                android:onClick="@{() -> viewModel.onChangeBtnClick()}"
                                android:text='@{viewModel.isDiscountOptionExpand() ? "Update" : "Change"}'
                                android:textColor="@color/clear_blue"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="@id/tvSelectDiscountOption"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@id/tvSelectDiscountOption"
                                app:textAllCaps="true"
                                tools:text="Update" />

                            <View
                                android:id="@+id/divider_tp"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/spacing_normal"
                                android:background="#efefef"
                                android:visibility="@{viewModel.isDiscountOptionExpand() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/tvChooseDiscountOption" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="@{viewModel.isDiscountOptionExpand ? View.VISIBLE : View.GONE}">

                            <RadioButton
                                android:id="@+id/radio_button_card_payment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:checked="@{viewModel.isCardSelected}"
                                android:onClick="@{viewModel::onClickCheckBox}"
                                android:text="@{viewModel.earnText}"
                                android:textColor="#de000000"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:text="@string/first_summary" />

                            <View
                                android:id="@+id/divider_one"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#efefef"
                                app:layout_constraintTop_toBottomOf="@id/text_view_card_payment_info" />

                            <RadioButton
                                android:id="@+id/redeem_check_box"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:checked="@{viewModel.isRedeemSelected}"
                                android:onClick="@{viewModel::onClickCheckBox}"
                                android:text="@{viewModel.redeemText}"
                                android:textColor="#de000000"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@+id/divider_one"
                                tools:text="I want to Redeem Trip Coins" />

                            <RadioButton
                                android:id="@+id/radio_button_coupon"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="8dp"
                                android:checked="@{viewModel.isCouponSelected}"
                                android:onClick="@{viewModel::onClickCheckBox}"
                                android:text="@{viewModel.couponText}"
                                android:textColor="#de000000"
                                android:textStyle="bold"
                                android:visibility="@{viewModel.isCouponShow() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintTop_toBottomOf="@+id/divider_two"
                                tools:text="I want to Redeem Coupon" />

                            <SeekBar
                                android:id="@+id/seekBar"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginEnd="8dp"
                                android:enabled="@{viewModel.wannaRedeem}"
                                android:visibility="@{viewModel.isRedeemSelected() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintTop_toBottomOf="@+id/text_view_intended_redeem_coin"
                                tools:visibility="visible" />

                            <View
                                android:id="@+id/divider_two"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="12dp"
                                android:background="#efefef"
                                android:visibility="@{viewModel.isCouponShow() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintTop_toBottomOf="@id/seekBar" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_view_card_payment_info"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:justificationMode="inter_word"
                                android:text='@{viewModel.bankDiscountInfo}'
                                android:textColor="#8e8e93"
                                android:textSize="12sp"
                                android:visibility="@{viewModel.isCardSelected() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintTop_toBottomOf="@+id/radio_button_card_payment"
                                tools:layout_editor_absoluteY="296dp"
                                tools:visibility="visible" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:text="@string/drag_to_slider_to_redeem_trip_coin"
                                android:textColor="#8e8e93"
                                android:textSize="12sp"
                                android:visibility="@{viewModel.isRedeemSelected() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/redeem_check_box"
                                tools:visibility="gone" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/text_view_intended_redeem_coin"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_small"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="16dp"
                                android:text="@{String.valueOf(viewModel.redeemInfo)}"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:visibility="@{viewModel.isRedeemSelected() ? View.VISIBLE : View.GONE}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/redeem_check_box"
                                tools:text="870"
                                tools:visibility="visible" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/end_one_third_guideline_internal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.71" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_apply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:enabled="true"
                                android:onClick="@{() -> viewModel.onCouponApply()}"
                                android:text="@string/apply"
                                android:visibility="@{viewModel.isCouponSelected() &amp;&amp; viewModel.isCouponShow()? View.VISIBLE : View.GONE}"
                                app:layout_constraintBottom_toBottomOf="@id/input_layout_coupon"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@id/end_one_third_guideline_internal"
                                app:layout_constraintTop_toTopOf="@id/input_layout_coupon"
                                tools:visibility="visible" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/input_layout_coupon"
                                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_small"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:hint="@string/enter_the_coupon_code"
                                android:visibility="@{viewModel.isCouponSelected() &amp;&amp; viewModel.isCouponShow() ? View.VISIBLE : View.GONE}"
                                app:boxBackgroundColor="@color/white"
                                app:layout_constraintEnd_toEndOf="@+id/end_one_third_guideline_internal"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/radio_button_coupon"
                                tools:visibility="visible">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/coupon_text_input_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@={viewModel.couponObserver.coupon}"
                                    android:textSize="16sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPaymentView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="@dimen/spacing_one_third"
                    android:background="@drawable/background_white"
                    android:visibility="@{viewModel.totalPrice == 0 ? View.GONE : View.VISIBLE}"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    app:layout_constraintStart_toStartOf="@id/begin_guideline"
                    app:layout_constraintTop_toBottomOf="@id/layout_discount">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="@dimen/spacing_normal"
                        android:paddingEnd="@dimen/spacing_small"
                        android:paddingRight="@dimen/spacing_small"
                        android:paddingBottom="@dimen/spacing_normal">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/payment_icon"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_payment_mono" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/text_label_select_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:text="@string/select_your_preferd_bank"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:layout_constraintStart_toEndOf="@id/payment_icon"
                            app:layout_constraintTop_toTopOf="@id/payment_icon" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginTop="4dp"
                            android:text="@string/choose_your_payment_method"
                            android:textColor="#4c4c4c"
                            android:textSize="11sp"
                            app:layout_constraintStart_toEndOf="@id/payment_icon"
                            app:layout_constraintTop_toBottomOf="@id/text_label_select_payment" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/list_payment_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_normal"
                            android:layout_marginBottom="@dimen/spacing_normal"
                            android:paddingBottom="@dimen/spacing_small"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/payment_icon"
                            tools:itemCount="2"
                            tools:listitem="@layout/item_payment_method_holiday" />

                        <LinearLayout
                            android:id="@+id/linearSliderDots"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/spacing_small"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/list_payment_type" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/card_prefix_image_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:tint="@color/gray_800"
                            android:visibility="@{viewModel.isCardSelected() ? View.VISIBLE : View.GONE}"
                            app:layout_constraintBottom_toBottomOf="@+id/card_prefix_text_input_layout"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/card_prefix_text_input_layout"
                            app:srcCompat="@drawable/ic_credit_card_black_24dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/card_prefix_text_input_layout"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_normal"
                            android:layout_marginLeft="@dimen/spacing_normal"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:visibility="@{viewModel.isCardSelected() ? View.VISIBLE : View.GONE}"
                            app:boxBackgroundColor="@color/white"
                            app:errorEnabled="false"
                            app:helperTextEnabled="false"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/card_prefix_image_view"
                            app:layout_constraintTop_toBottomOf="@+id/linearSliderDots">

                            <net.sharetrip.shared.view.widgets.TextInputAutoCompleteTextView
                                android:id="@+id/card_prefix_auto_complete_text_view"
                                style="?attr/editTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:completionThreshold="1"
                                android:hint="@string/card_prefix"
                                android:imeOptions="actionNext"
                                android:maxLines="1"
                                app:drawableRightCompat="@drawable/ic_arrow_drop_down_24dp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTermsCondition"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="100dp"
                    app:cardCornerRadius="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/end_guideline"
                    app:layout_constraintStart_toStartOf="@id/begin_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/cardPaymentView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/cvTermsCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            android:layout_marginLeft="@dimen/spacing_small"
                            android:onClick="@{viewModel::onClickTermsAndConditionCheckbox}"
                            app:buttonTint="@color/clear_blue"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvTermsCondition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textColorLink="@color/colorPrimary"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@id/cvTermsCondition"
                            app:layout_constraintTop_toTopOf="@id/cvTermsCondition"
                            tools:text="@string/i_agree_to_terms_condition" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/shadow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottom_sheet_corner_radius"
            android:background="@drawable/shape_gradient_top_shadow"
            app:layout_anchor="@id/bottom_sheet" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C9000000"
            android:visibility="@{viewModel.isDataLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/loading"
                android:textColor="@color/amberAlpha"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textLoading"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_normal"
                android:theme="@style/AppTheme.progressAccent" />

        </RelativeLayout>

        <include
            android:id="@+id/bottom_sheet"
            layout="@layout/bottom_sheet_holiday"
            app:viewModel="@{viewModel}"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
