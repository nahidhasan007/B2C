<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <View
                android:id="@+id/from_icon"
                android:layout_width="96dp"
                android:layout_height="154dp"
                android:background="@drawable/shimmer_textview_hotel_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/from_one"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/shimmer_textview_hotel"
                app:layout_constraintStart_toEndOf="@id/from_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/from_two"
                android:layout_width="139dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shimmer_textview_hotel_2"
                app:layout_constraintStart_toEndOf="@id/from_icon"
                app:layout_constraintTop_toBottomOf="@id/from_one" />

            <View
                android:id="@+id/from_three"
                android:layout_width="122dp"
                android:layout_height="38dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shimmer_textview_hotel_3"
                app:layout_constraintStart_toEndOf="@id/from_icon"
                app:layout_constraintTop_toBottomOf="@id/from_two" />

            <View
                android:id="@+id/from_four"
                android:layout_width="139dp"
                android:layout_height="16dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shimmer_textview_hotel_2"
                app:layout_constraintStart_toEndOf="@id/from_icon"
                app:layout_constraintTop_toBottomOf="@id/from_three" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
