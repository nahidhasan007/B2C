<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="IndigoButton" parent="android:style/Widget.Material.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:background">@drawable/indigo_button_ripple</item>
    </style>

    <style name="WhiteButton" parent="android:style/Widget.Material.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="IndigoButtonSmall" parent="android:style/Widget.Material.Button.Small">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:background">@drawable/indigo_button_ripple</item>
    </style>


    <style name="GrayButton" parent="android:style/Widget.Material.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:elevation">0dp</item>
        <item name="android:translationZ">0dp</item>
        <item name="android:background">@drawable/border_button_ripple</item>
    </style>

    <style name="CustomRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/amberAlpha</item>
        <item name="colorControlActivated">#ffd321</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

</resources>
