<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="net.sharetrip.tour.history.information.TourInfoViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/itinerary_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/spacing_small_tiny"
            android:background="@color/windowBackground"
            android:drawableRight="@drawable/ic_navigate_next_24dp"
            app:drawableTint="@color/black"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:onClick="@{()-> viewModel.onClickItinerary()}"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/itinerary"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            android:textStyle="normal"
            tools:text="@string/itinerary" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/condition_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/spacing_small_tiny"
            android:background="@color/windowBackground"
            android:drawableRight="@drawable/ic_navigate_next_24dp"
            app:drawableTint="@color/black"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/general_conditions"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="@string/general_conditions" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/note_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/spacing_small_tiny"
            android:background="@color/windowBackground"
            android:drawableRight="@drawable/ic_navigate_next_24dp"
            app:drawableTint="@color/black"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/special_notes"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="@string/special_notes" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tax_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="@dimen/spacing_small_tiny"
            android:background="@color/windowBackground"
            android:drawableRight="@drawable/ic_navigate_next_24dp"
            app:drawableTint="@color/black"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/spacing_normal"
            android:paddingRight="@dimen/spacing_normal"
            android:text="@string/tax"
            android:textColor="@color/black_87"
            android:textSize="16sp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="@string/tax" />

    </LinearLayout>

</layout>