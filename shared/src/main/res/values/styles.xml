<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MyDynamicDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--buttons color-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--title and message color-->
        <!--dialog background-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="IndigoButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:background">@drawable/indigo_button_selector</item>
    </style>

    <style name="IndigoButtonSmall" parent="Base.Widget.AppCompat.Button.Small">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:background">@drawable/indigo_button_selector</item>
        <item name="android:textColor">@color/button_color_state</item>
    </style>

    <style name="GrayButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal_material</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical_material</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical_material</item>
        <item name="android:textColor">@color/button_color_state</item>
        <item name="android:background">@drawable/gray_button_selector</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22dp</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:colorControlNormal">#000000</item>
    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>